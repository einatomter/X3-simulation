<launch>

  <!-- USE: roslaunch robot_mira urdf_visualize.launch model:='$(find myrobot_package)/urdf/myrobot.urdf' -->
  <arg name="model" default=""/>


  <param name="robot_description" command="cat '$(find rov_hil)/urdf/x3_v1.urdf'" />

  <!-- send fake joint values
  <node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
    <param name="use_gui" value="TRUE"/>
  </node> -->

  <!-- Launch GUI for changing joint values -->
    <node pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"
     name="joint_state_publisher_gui" output="screen"/>
  
  <!-- Combine joint values -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <!-- Show in Rviz   -->
  <!--<node name="rviz" pkg="rviz" type="rviz" args="-d $(find robot_mira)/rviz_config/urdf.rviz"/>-->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find rov_hil)/rviz_config/default.rviz"/>
  <!-- <node name="rviz" pkg="rviz" type="rviz" args=""/> -->
</launch>