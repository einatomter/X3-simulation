<?xml version="1.0"?>
<robot name="cobot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:property name="models" value="$(find my_cobot)/models/" />

    <material name="blue">
        <color rgba="0 0 0.8 1"/>
    </material>
    <material name="red">
        <color rgba="0.8 0 0 1"/>
    </material>
    <material name="green">
        <color rgba="0 0.8 0 1"/>
    </material>
    <material name="grey">
        <color rgba="0.75 0.75 0.75 1"/>
    </material>
    <material name="white">
        <color rgba="1.0 1.0 1.0 1"/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

	<!-- * * * Link Definitions * * * -->
    <link name="L1_link">
        <collision>
            <origin rpy="0.0 0 0" xyz="0 0 0.03057"/>
            <geometry>
                <cylinder radius="0.045" length="0.06114"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0.0 0 0" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.045" length="0.06114"/>
                <!-- <mesh filename="package://my_cobot/models/joint1.dae"/> -->
            </geometry>
            <material name="white"/>
        </visual>
	</link>



    <link name="L2_link">
        <collision>
            <origin rpy="0 0 0" xyz="0 0 0.03057"/>
            <geometry>
                <cylinder radius="0.0245" length="0.07042"/>
            </geometry>
        </collision>

        <visual>
            <origin rpy="0 0 1.5708" xyz="0 0 0"/>
            <geometry>
                <cylinder radius="0.0245" length="0.07042"/>
                <!-- <mesh filename="package://my_cobot/models/joint2.dae"/> -->
            </geometry>
            <material name="white"/>
        </visual>
	</link>

    <joint name="J1_joint" type="continuous">
    	<parent link="L1_link"/>
    	<child link="L2_link"/>
        <origin xyz="0 0 0.06114" rpy="0 0 0"/>
        <limit effort="0.1" velocity="0.005"/>
        <axis xyz="0 0 1"/>
	</joint>



    <link name="L3_link">
