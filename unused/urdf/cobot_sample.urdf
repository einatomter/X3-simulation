                <!-- <mesh filename="package://my_cobot/models/joint3.dae"/> -->
            </geometry>
            <material name="white"/>
        </visual>
	</link>

    <joint name="J2_joint" type="revolute">
    	<parent link="L2_link"/>
    	<child link="L3_link"/>
        <origin xyz="0 0.06639 0.07042" rpy="0 0 0"/>
        <limit lower="-2.7925" upper="2.7925" effort="0.1" velocity="0.005"/>
        <axis xyz="0 -1 0"/>
	</joint>



